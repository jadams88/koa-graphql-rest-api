{
  "name": "api",
  "version": "0.0.0",
  "description": "Example Koa API that support REST and GraphQL",
  "author": "Jonathon Adams",
  "license": "ISC",
  "main": "dist/index.js",
  "keywords": [
    "Koa",
    "REST",
    "GraphQL"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=dev nodemon -r dotenv/config dist/index.js",
    "test": "run-s test:unit test:integration",
    "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --testPathPattern='\\w+\\.spec.tsx?'",
    "test:integration": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage --runInBand --testPathPattern='\\w+\\.ispec.tsx?'",
    "test:staged": "run-s test:staged:unit test:staged:integration",
    "test:staged:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --findRelatedTests --testPathPattern='\\w+\\.spec.tsx?'",
    "test:staged:integration": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage --runInBand --findRelatedTests --testPathPattern='\\w+\\.ispec.tsx?'",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll",
    "test:snapshot:update": "jest --updateSnapshot --testPathPattern",
    "build": "cross-env NODE_ENV=build gulp build",
    "build:dist": "gulp dist",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "lint:staged": "lint-staged",
    "typedoc": "typedoc",
    "docs": "typedoc --out docs/documentation/ src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint:staged",
      "pre-push": "npm run test:push"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "npm run test",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "dependencies": {
    "apollo-server-koa": "^2.3.2",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "glob": "^7.1.3",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "^8.4.0",
    "kcors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-bearer-token": "^1.0.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "lodash.keyby": "^4.6.0",
    "lodash.merge": "^4.6.1",
    "pg": "^7.8.0",
    "sequelize": "^5.0.0-beta.16"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.0.5",
    "@types/jest": "^23.3.13",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.39",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "dotenv": "^6.2.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.1",
    "pretty-quick": "^1.10.0",
    "semver": "^5.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}
