{
  "name": "api",
  "version": "0.0.0",
  "description": "Example Koa API that support REST and GraphQL",
  "author": "Jonathon Adams",
  "license": "ISC",
  "main": "dist/index.js",
  "keywords": [
    "Koa",
    "REST",
    "GraphQL"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=dev node-dev -r dotenv/config dist/index.js",
    "test": "npm run test:unit",
    "test:staged": "cross-env NODE_ENV=test jest --passWithNoTests --coverage --testPathPattern='\\w+\\.spec.tsx?' --findRelatedTests",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll",
    "test:push": "cross-env NODE_ENV=test jest --ci=true --passWithNoTests --coverage --bail --testPathPattern='\\w+\\.spec.tsx?'",
    "test:snapshot:update": "jest --updateSnapshot --testPathPattern",
    "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --testPathPattern='\\w+\\.spec.tsx?'",
    "test:integration": "cross-env NODE_ENV=test jest --coverage --runInBand --testPathPattern='\\w+\\.ispec.tsx?'",
    "build": "cross-env NODE_ENV=build gulp build",
    "build:dist": "gulp dist",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "lint:staged": "lint-staged",
    "typedoc": "typedoc",
    "docs": "typedoc --out docs/documentation/ src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint:staged",
      "pre-push": "npm run test:push"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint --fix",
        "npm run test:unit",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "dependencies": {
    "apollo-server-koa": "^2.3.1",
    "bcryptjs": "^2.4.3",
    "dataloader": "^1.4.0",
    "graphql": "^14.0.2",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "kcors": "^2.2.2",
    "koa": "^2.6.2",
    "koa-bearer-token": "^1.0.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.0.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "lodash.keyby": "^4.6.0",
    "lodash.merge": "^4.6.1",
    "pg": "^7.7.1",
    "sequelize": "^5.0.0-beta.15"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/graphql": "^14.0.3",
    "@types/jest": "^23.3.10",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/koa": "^2.0.47",
    "@types/koa-router": "^7.0.35",
    "@types/sequelize": "github:types/sequelize",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "dotenv": "^6.2.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.0",
    "husky": "^1.2.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.0",
    "lint-staged": "^8.1.0",
    "node-dev": "^3.1.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.15.3",
    "pretty-quick": "^1.8.0",
    "semver": "^5.6.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  }
}
