{
  "name": "api",
  "version": "0.0.0",
  "description": "Example Koa API that support REST and GraphQL",
  "author": "Jonathon Adams",
  "type": "commonjs",
  "license": "ISC",
  "main": "dist/index.js",
  "keywords": [
    "Koa",
    "REST",
    "GraphQL"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "cross-env NODE_ENV=dev nodemon  -r dotenv/config dist/index.js",
    "test": "run-p test:unit test:e2e",
    "test:unit": "cross-env NODE_ENV=test jest --coverage --passWithNoTests --testPathPattern='\\w+\\.spec\\.tsx?'",
    "test:e2e": "cross-env NODE_ENV=test jest --detectOpenHandles --coverage --passWithNoTests --runInBand --testPathPattern='\\w+\\.e2e\\.tsx?'",
    "test:staged": "cross-env NODE_ENV=test jest --passWithNoTests --detectOpenHandles --runInBand --findRelatedTests",
    "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll",
    "test:snapshot:update": "jest --updateSnapshot --testPathPattern",
    "build": "gulp dev",
    "build:prod": "gulp prod",
    "format:fix": "pretty-quick --staged",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --project tsconfig.json --config tslint.json --fix",
    "lint:staged": "lint-staged",
    "typedoc": "typedoc",
    "docs": "typedoc --out docs/documentation/ src/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s format:fix lint:staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "npm run lint:fix",
        "git add"
      ]
    },
    "ignore": [
      "**/dist/*.min.js"
    ]
  },
  "dependencies": {
    "apollo-server-koa": "^2.4.8",
    "bcryptjs": "^2.4.3",
    "boom": "^7.3.0",
    "dataloader": "^1.4.0",
    "glob": "^7.1.3",
    "graphql": "^14.1.1",
    "graphql-iso-date": "^3.6.1",
    "graphql-tools": "^4.0.4",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.7.0",
    "koa-bearer-token": "^1.0.0",
    "koa-compress": "^3.0.0",
    "koa-helmet": "^4.1.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.4.0",
    "lodash.keyby": "^4.6.0",
    "lodash.merge": "^4.6.1",
    "lodash.omit": "^4.5.0",
    "pg": "^7.9.0",
    "sequelize": "^5.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/bluebird": "^3.5.26",
    "@types/boom": "^7.2.1",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.11",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/koa": "^2.0.48",
    "@types/koa-router": "^7.0.40",
    "cross-env": "^5.2.0",
    "del": "^4.0.0",
    "dotenv": "^7.0.0",
    "gulp": "^4.0.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-extended": "^0.11.1",
    "lint-staged": "^8.1.5",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "pretty-quick": "^1.10.0",
    "semver": "^5.6.0",
    "ts-jest": "^24.0.0",
    "tslint": "^5.14.0",
    "typescript": "^3.3.4000"
  }
}
