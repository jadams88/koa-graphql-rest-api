{
  "compileOnSave": true,
  "forceConsistentCasingInFileNames": true,
  "compilerOptions": {
    "baseUrl": "./",
    "watch": true,
    "target": "es2017",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "lib": ["es2017", "esnext"]
  }
}
